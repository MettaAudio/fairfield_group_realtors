<div class="span8 offset1">
  <%= simple_form_for @message, :url => talk_path, :html => { :class => 'form-horizontal' } do |form| %>
      <fieldset>
        <legend>Your Contact Information</legend>
          <%= form.input :name %>
          <%= form.input :email, placeholder: 'your_email@example.com' %>
          <%= form.input :phone, label: 'Daytime Phone' %>
          <%= form.input :cell, label: 'Cell Phone' %>
          <%= form.input :address %>
          <%= form.input :city %>
          <%= form.input :state, collection: us_states %>
          <%= form.input :zipcode %>
      </fieldset>
      <fieldset>
        <legend>What You're Looking For</legend>
          <%= form.input :interest, label: "I'm Interested In", collection: ['Buying', 'Selling', 'Investing', 'BPO/REO/Short Sale'] %>
          <%= form.input :location, label: "Location of Interest" %>
          <%= form.input :price_range, label: "Price Range", collection: ['Below $50,000', '$50,000 to $100,000', '$100,000 to $150,000', '$150,000 to $200,000', '$200,000 to $250,000', '$250,000 to $500,000', '$500,000 and above'] %>
          <%= form.input :key_factors, collection: ['# of bedrooms', '# of baths', '# of garage spaces', 'Fireplace', 'Pool', 'Deck', 'Other'], :as => :check_boxes %>
          <%= form.input :comment, :as => :text, input_html: { :rows => 5 } %>
      </fieldset>
      <%= form.button :submit %>
  <% end %>
</div>
